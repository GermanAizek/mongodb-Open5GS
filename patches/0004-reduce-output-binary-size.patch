 SConstruct | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/SConstruct b/SConstruct
index 5b1eff31b85..9b87d6f27c3 100644
--- a/SConstruct
+++ b/SConstruct
@@ -261,7 +261,7 @@ add_option('noshell',
 add_option('dbg',
     choices=['on', 'off'],
     const='on',
-    default=build_profile.dbg,
+    default='off',
     help='Enable runtime debugging checks',
     nargs='?',
     type='choice',
@@ -288,7 +288,7 @@ add_option('spider-monkey-dbg',
 add_option('opt',
     choices=['on', 'size', 'off', 'auto'],
     const='on',
-    default=build_profile.opt,
+    default='size',
     help='Enable compile-time optimization',
     nargs='?',
     type='choice',
